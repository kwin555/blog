    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="flex-content-container">
    <header class="row">
      <div class="col-3">
      </div>
      <div class="col col-sm-4 hidden-xs-down slogan">
        Read about my life
      </div>
      <div class="col-10 offset-1 offset-sm-0 col-sm-5 links float-right">
        <%= link_to 'Home', root_path %>
         /&nbsp;&nbsp;
        <%= link_to 'About', about_path %>
      </div>
    </header>
  </div>

    <hr  />

    <br class="clear" />
    <div class="container">
      <%= yield %>
    </div>
    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 footer-blurb ">
            <p>
              Proudly programs in Houston, Tx. <br  />
              Want me to help you out with your website? <a href="mailto:kev.ftw595@gmail.com" target="_top">Contact Me!</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
